<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyMedcine" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/dark_navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="data_from_section" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="background">@drawable/section_bg</item>
        <item name="elevation">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="display_drug_btn" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@drawable/border_bg</item>
        <item name="minWidth">64dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="minHeight">36dp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>
    <style name="secondary_btn" parent="display_drug_btn">
        <item name="android:background">@color/light_gray</item>
        <item name="android:textColor">@color/less_dark_version_navy_blue</item>
    </style>
</resources>