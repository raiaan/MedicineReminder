<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRowMedication"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:elevation="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/imgOnlineIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_online" />



    <ImageView
        android:id="@+id/imgMedicationIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:src="@drawable/nurse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/imgMedicationIcon"
        app:layout_constraintStart_toEndOf="@id/imgMedicationIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="MedName" />

    <TextView
        android:id="@+id/txtDosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/txtMedName"
        app:layout_constraintStart_toEndOf="@id/txtMedName"
        app:layout_constraintTop_toTopOf="@id/txtMedName"
        tools:text="Dosage" />

    <TextView
        android:id="@+id/txtDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/txtMedName"
        app:layout_constraintTop_toBottomOf="@id/txtMedName"
        tools:text="Details" />
</androidx.constraintlayout.widget.ConstraintLayout>