<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <include layout="@layout/add_drug_toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="64dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/edit_drug_name_caontainer"
                android:orientation="vertical"
                android:background="@color/white"
                android:elevation="@dimen/elevation_size">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/edit_medicine_drug_name_label"
                    android:textSize="16sp"
                    android:textColor="@color/less_dark_version_navy_blue"
                    android:textFontWeight="600"/>

                <EditText
                    android:id="@+id/edit_drug_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/edit_medicine_drug_type_label"
                    android:textColor="@color/less_dark_version_navy_blue"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:textFontWeight="600"/>

                <Spinner
                    android:id="@+id/edit_drug_types"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/edit_medicine_drug_med_strength_label"
                    android:textColor="@color/less_dark_version_navy_blue"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:textFontWeight="600"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:inputType="number"
                        android:id="@+id/edit_drug_strength_value"
                        />
                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minHeight="48dp"
                        android:id="@+id/edit_drug_strength_unit"
                        android:layout_weight="1"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/edit_medicine_drug_condition_label"
                    android:textColor="@color/less_dark_version_navy_blue"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:textFontWeight="600"/>
                <EditText
                    android:id="@+id/edit_drug_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edit_medicin_reason"
                    android:minHeight="48dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/edit_drug_reminder_times_caontainer"
                android:background="@color/white"
                android:elevation="@dimen/elevation_size"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/edit_drug_chronic_disease"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="@string/chronic_disease"
                        android:textSize="16sp"
                        android:textColor="@color/less_dark_version_navy_blue"
                        android:textFontWeight="600"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_drug_end_date"
                        android:textSize="16dp"
                        android:id="@+id/edit_drug_end_date_label"
                        />
                    <EditText
                        android:id="@+id/edit_drug_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edit_drug_end_date"
                        android:minHeight="48dp" />
                    <DatePicker android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_drug_end_date_picker_date"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_drug_weekDays_date"
                        android:visibility="gone"
                        android:textSize="16dp"
                        android:id="@+id/edit_drug_week_days_label"
                        />
                    <Spinner
                        android:id="@+id/edit_drug_week_days_spinner"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/edit_drug_reminding_hours_per_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:layout_below="@+id/drug_end_date"/>
                    <TimePicker
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:timePickerMode="spinner"
                        android:id="@+id/hours_picker_1"/>
                    <TimePicker
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:timePickerMode="spinner"
                        android:id="@+id/hours_picker_2"
                        android:visibility="gone"/>
                    <TimePicker
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:timePickerMode="spinner"
                        android:id="@+id/hours_picker_3"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_drug_hours_txt"
                        android:inputType="textMultiLine"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:elevation="@dimen/elevation_size"
                android:id="@+id/edit_drug_instructions_caontainer"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/edit_medicine_drug_instruction_label"
                    android:textColor="@color/less_dark_version_navy_blue"
                    android:textSize="16sp"
                    android:textFontWeight="600"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:id="@+id/edit_drug_instruction_radio_group">

                    <RadioButton
                        android:id="@+id/edit_drug_before_eating"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="@string/edit_drug_before_eating"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/edit_drug_while_eating"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="@string/edit_drug_while_eating"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/edit_drug_after_eating"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="@string/edit_drug_after_eating"
                        android:textSize="16sp" />

                    <RadioButton
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_drug_instruct_doesnt_matter"
                        android:text="@string/edit_drug_instruct_doesnt_matter"
                        android:textSize="16sp"/>
                </RadioGroup>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_drug_instruct_other"
                    android:hint="@string/edit_drug_instruct_other"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_drug_Refill_caontainer"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:elevation="@dimen/elevation_size">
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_drug_refill_reminder_switch"
                    android:id="@+id/edit_drug_refill_reminder_switch"
                    android:layout_gravity="end"
                    android:textColor="@color/less_dark_version_navy_blue"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:checked="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_drug_current_amount"
                    android:id="@+id/edit_drug_current_amount_label"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_drug_current_number"
                    android:text="10"
                    android:inputType="number"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_drug_refill_reminder_notify_label"
                    android:text="@string/edit_drug_refill_reminder_notify"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_drug_refill_reminder_notify"
                    android:text="2"
                    android:inputType="number"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:id="@+id/save_drug"
                android:layout_marginVertical="16dp"
                android:padding="16dp"
                app:cornerRadius="16dp"
                android:elevation="@dimen/elevation_size"
                android:layout_gravity="center"
                android:backgroundTint="@color/blue_light"
                app:strokeColor="@color/blue_light"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>