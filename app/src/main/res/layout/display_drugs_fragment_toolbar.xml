<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/displayDrugDetailsToolBar"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="@drawable/grediant_background"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingRight="24dp">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_border_color_black_24dp"
            android:id="@+id/display_drug_edit"
            android:layout_marginRight="16dp"
            app:tint="@color/light_gray" />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete_outline_black_24dp"
            android:id="@+id/display_drug_details_delete"
            app:tint="@color/light_gray" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/display_drug_details_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/circle_background"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/display_drug_details_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:textFontWeight="700"
            android:gravity="center"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/page_title" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/display_drug_details_strength"
            android:textColor="@color/light_gray"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:textSize="@dimen/page_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/display_drug_details_state"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:textColor="@color/light_gray"/>
    </LinearLayout>
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>