<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page_navigation_file"
    app:startDestination="@id/homeIconFragment">

    <fragment
        android:id="@+id/medicineIconFragment"
        android:name="com.example.mymedcine.medication.view.MedictionFragment"
        tools:layout="@layout/fragment_medicine"
        android:label="fragment_medicine_icon" >
        <action
            android:id="@+id/action_medicineIconFragment_to_drug_details_Fragment"
            app:destination="@id/drug_details_Fragment" />
    </fragment>
    <fragment
        android:id="@+id/drug_details_Fragment"
        android:name="com.example.mymedcine.drugdetails.view.DisplayDrugDetailsFragment"
        tools:layout="@layout/fragment_medicine" >
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/edit_drug_Fragment"
        android:name="com.example.mymedcine.edit_drug.view.EditDrugFramgent"
        tools:layout="@layout/fragment_medicine" >
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/homeIconFragment"
        android:name="com.example.mymedcine.HomeFragment"
        tools:layout="@layout/fragment_home"
        android:label="fragment_home_icon" />
    <fragment
        android:id="@+id/takerIconFragment"
        android:name="com.example.mymedcine.TakerFragment"
        tools:layout="@layout/fragment_taker"
        android:label="fragment_taker_icon" />
    <fragment
        android:id="@+id/moreIconFragment"
        android:name="com.example.mymedcine.MoreFragment"
        tools:layout="@layout/fragment_more"
        android:label="fragment_more_icon" />
</navigation>